<%= form_for([:admin, @actionPage]) do |f| %>
  <% pages = %w(basics action images sharing partners thank_you) %>
  <% pages.each_with_index do |page, i| %>
    <div id="<%= page.sub('_', '-') %>" class="page">
      <%= render "edit_#{page}", f: f %>

      <div class="form-actions">
        <% if @actionPage.new_record? && pages[i+1] %>
          <%= link_to "Next", "##{pages[i+1].sub('_', '-')}", class: "btn"  %>
        <% else %>
          <%= f.submit "Save" %>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>
