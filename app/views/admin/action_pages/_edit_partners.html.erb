<h2>Partners</h2>

<p> Add partner logos and email signups to this action. </p>

<div class="form-item">
  <%= f.label :partner_ids, "Add Partners" %>
  <%= f.collection_select :partner_ids, @partners, :id, :name,
    { include_blank: "None" }, { multiple: true } %>
</div>

<% unless @actionPage.partners.empty? %>
  <h3>Enable mailing lists</h3>
  <p>
  You <em>must</em> have the Activism Directorâ€™s approval to add a partner email signup to a campaign,
  and a partner must be approved each time we agree to give them a signup option on any campaign.
  </p>
  <fieldset>
    <%= f.fields_for(:partnerships) do |sf| %>
      <div class="form-item">
        <%= sf.label :enable_mailings, "Enable mailings for #{sf.object.partner.name}" %>
        <%= sf.check_box :enable_mailings %>
      </div>
    <% end %>
  </fieldset>
<% end %>
