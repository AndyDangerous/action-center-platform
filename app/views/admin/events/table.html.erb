<div class="container">
  <h3>Action page analytics for: <i><%= @actionPage.title %></i></h3>
  <% if @data.empty? %>
    <div>There's not data to display yet.</div>
  <% else %>
    <table class="table table-striped" >
      <thead>
        <tr>
          <th>Date</th>
          <% @headers.each do |type| %>
            <th><%= type.to_s.humanize %></th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <% @data.each do |date, counts| %>
          <tr>
            <td><%= date.to_datetime.strftime("%B %-d, %Y") %></td>
            <% counts.each do |action, count| %>
              <td><%= count || 0 %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>
