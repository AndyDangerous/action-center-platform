<% if letter.description.present? && !letter.description.include?("``` letter") %>
  <div class="letter" id="letter">
    <div class="body">
      <div class="date"><%= I18n.l Time.now, format: "%B %-d, %Y" %></div>
      <div class="title"><strong><%= letter.title -%></strong></div>
      <div class="description"><%= markdown letter.description -%></div>
      <div class="signed"><%= I18n.t :signed  %></div>
      <div class="close">
        <div class="name"><%= I18n.t :your_name %></div>
      </div>
    </div>
  </div>
<% end %>
