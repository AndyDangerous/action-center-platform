<div class="container">
  <h3>Action page views for: <i><%= @actionPage.title %></i></h3>
  <table class="table table-striped" >
    <thead>
      <tr>
        <th>Date</th>
        <% @data.first[1].keys.each do |type| %>
          <th><%= type.to_s.humanize.pluralize %></th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @data.keys.each do |date| %>
        <tr>
          <td><%= date.to_datetime.strftime("%B %-d, %Y") %></td>
          <% @data[date].each do |action, count| %>
            <td><%= count || 0 %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
