<ul>
  <% source_files.each do |source_file| %>
    <li>
      <%= link_to source_file.full_url, class: "image", target: "_new" do %>
        <%= image_tag source_file.full_url %>
        <span><%= source_file.file_name %></span>
      <% end %>
    </li>
  <% end %>

  <% if source_files.empty? %>
    <li>No results</li>
  <% end %>
</ul>

