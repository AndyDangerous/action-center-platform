<div class="set_form_background"></div>
<div class="set_form_wrapper panel-default">
  <div class="panel-heading">
    <%= id ? "Edit" : "Create" %> topic category 
    <button type="button" class="close pull-right"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>   
  </div>
  <form class='name-form form-inline'>
    <div class='form-group'>
      <input class='name form-control' placeholder='Topic Category Name' value="<%= name %>">
    </div>
    <div class='form-group'>
      <button class='btn btn-sm btn-success pull-right add_term'><%= id ? "Update" : "Add" %></button>
    </div>
  </form>
</div>
