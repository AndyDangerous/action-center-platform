<%= f.fields_for(:congress_message_campaign) do |sf| %>
  <div class="form-item">
    <%= sf.label :subject %>
    <%= sf.text_field :subject %>
  </div>

  <div class="form-item">
    <%= sf.label :message %>
    <%= sf.text_area :message %>
  </div>

  <div class="form-item">
    <%= sf.label :target_house do %>
      <%= sf.check_box :target_house, class: "fancy" %><span class="ui"></span>
      Target House
    <% end %>

    <%= sf.label :target_senate do %>
      <%= sf.check_box :target_senate, class: "fancy" %><span class="ui"></span>
      Target Senate
    <% end %>
  </div>

  <div class="form-item">
    <%= sf.label :target_bioguide_ids, "Specific legislators" %>
    <%= sf.select :target_bioguide_ids, options_from_collection_for_select(CongressMember.order(:full_name), :id, :full_name, sf.object.target_bioguide_ids.split(",")),
        {}, multiple: true, "data-placeholder" => "Start typing to search" %>
  </div>

  <div class="form-item">
    <%= sf.label :campaign_tag %>
    <%= sf.text_field :campaign_tag %>
  </div>
<% end %>
