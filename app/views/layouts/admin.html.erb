<!DOCTYPE html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/x-icon" href="<%= asset_path('favicon.ico') -%>">

    <title><%= page_title -%></title>
    <%= stylesheet_link_tag "admin", media: "all" %>
    <%= yield(:head) if content_for?(:head) -%>
    <%= csrf_meta_tags %>
  </head>

  <body class="<%= controller.controller_name  + "-" +action_name %>">
    <header>
      <div class="logo">
        <%= image_tag "EFF_Monogram-red.png" %>
      </div>

      <h1><%= page_title %></h1>
    </header>

    <div id="page">
      <% if %w(new create).include?(action_name) || request.path_parameters.include?(:id) %>
        <%= render "member_nav" %>
      <% else %>
        <%= render "collection_nav" %>
      <% end %>

      <div id="content">
        <%= yield %>
      </div>
    </div>

    <%= javascript_include_tag "admin" %>
  </body>
</html>
